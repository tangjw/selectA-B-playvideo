    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.zonsim.demo.MainActivity">

    <com.zonsim.demo.widget.RatioFrameLayout
        android:layout_width="match_parent"
